{
  "name": "makebecool-starter-theme",
  "version": "1.0.0-alpha.1",
  "private": true,
  "author": "Ottomen",
  "description": "An opinionated, Slate compatible, starting point for developing Shopify themes.",
  "keywords": [
    "slate",
    "shopify",
    "theme",
    "CLI"
  ],
  "license": "MIT",
  "devDependencies": {
    "@shopify/slate-tools": "1.0.0-beta.17",
    "babel-preset-shopify": "^16.2.0",
    "stylelint-config-prettier": "^3.0.4",
    "stylelint-config-shopify": "^5.0.0",
    "babel-jest": "^22.0.4",
    "eslint": "^4.10.0",
    "eslint-plugin-shopify": "^19.0.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-csscomb": "^3.0.7",
    "gulp-cssnano": "^2.1.2",
    "gulp-debug": "^3.0.0",
    "gulp-file": "^0.4.0",
    "gulp-include": "^2.3.1",
    "gulp-jade": "^1.1.0",
    "gulp-js-import": "^1.0.5",
    "gulp-minify": "^1.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "gulp-shopify-upload": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^3.0.0",
    "gulp-watch": "^4.3.11",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^2.8.0",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^8.1.0",
    "postcss-flexibility": "^2.0.0",
    "prettier": "^1.7.4",
    "prettier-stylelint": "^0.4.2",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "stylelint": "^9.1.2"
  },
  "dependencies": {
    "@shopify/theme-a11y": "^2.0.1",
    "@shopify/theme-addresses": "^3.0.0",
    "@shopify/theme-cart": "^1.0.0-alpha.7",
    "@shopify/theme-currency": "^1.0.0-alpha.7",
    "@shopify/theme-images": "^1.0.0-alpha.7",
    "@shopify/theme-product": "^1.0.0",
    "@shopify/theme-product-form": "^3.0.0",
    "@shopify/theme-rte": "^1.0.0-alpha.7",
    "@shopify/theme-sections": "^1.1.0",
    "@shopify/theme-variants": "^1.0.0-alpha.8",
    "jquery": "^3.2.1",
    "lazysizes": "^4.1.1",
    "lodash-es": "^4.17.4",
    "normalize.css": "^7.0.0",
    "qrcode": "^1.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "globals": [
      "$",
      "slate",
      "theme",
      "Shopify",
      "confirm",
      "CartJS",
      "fbq",
      "PerfectScrollbar",
      "fieldName",
      "pluralize",
      "MutationObserver",
      "location",
      "sessionStorage",
      "formValidateData",
      "localStorage",
      "history",
      "Image"
    ],
    "ignore": [
      "**/*.min.js",
      "**/*.lib.js",
      "**/*.min.css",
      "**/vendor/",
      "**/assets/",
      "**/uploads/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "linters": {
      "*.scss": [
        "prettier-stylelint --write",
        "git add"
      ],
      "*.js": [
        "npm run standard",
        "git add"
      ]
    },
    "ignore": [
      "**/*.min.js",
      "**/*.lib.js",
      "**/*.min.css",
      "**/vendor/",
      "**/assets/",
      "**/uploads/"
    ]
  },
  "scripts": {
    "start": "slate-tools start",
    "watch": "slate-tools start --skipFirstDeploy",
    "build": "slate-tools build",
    "deploy": "slate-tools build && slate-tools deploy",
    "zip": "slate-tools build && slate-tools zip",
    "lint": "slate-tools lint",
    "format": "slate-tools format",
    "standard": "standard --verbose --fix | snazzy",
    "precommit": "lint-staged"
  }
}
