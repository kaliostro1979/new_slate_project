<h1>{{ 'customer.activate_account.title' | t }}</h1>
<p>{{ 'customer.activate_account.subtext' | t }}</p>

{% form 'activate_customer_password', data-form: 'activate', class: 'form' %}
  {{ form.errors | default_errors }}

  <div class="form-group">
    <input type="password"
      name="customer[password]"
      id="CustomerPassword"
      class="input"
      placeholder="{{ 'customer.activate_account.password' | t }}"> 
    <label for="CustomerPassword" class="input-label">
      {{ 'customer.activate_account.password' | t }}
    </label>
    {% render 'icons', icon: 'tick' %}
    {% render 'icons', icon: 'fail' %}
  </div>

  <div class="form-group">
    <input type="password"
      name="customer[password_confirmation]"
      id="CustomerPasswordConfirmation"
      class="input"
      placeholder="{{ 'customer.activate_account.password_confirm' | t }}">  
    <label for="CustomerPasswordConfirmation" class="input-label">
      {{ 'customer.activate_account.password_confirm' | t }}
    </label>
    {% render 'icons', icon: 'tick' %}
    {% render 'icons', icon: 'fail' %}
  </div>

  <input type="submit" class="button" value="{{ 'customer.activate_account.submit' | t }}">
  <input type="submit" class="button button--secondary" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
{% endform %}
