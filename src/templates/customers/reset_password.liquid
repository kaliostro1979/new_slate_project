<div class="form-reset-password">
  {% form 'reset_customer_password', data-form: 'reset', class: 'form' %}

    <h1>{{ 'customer.reset_password.title' | t }}</h1>

    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {{ form.errors | default_errors }}

    <div class="form-group">
      <input type="password"
        name="customer[password]"
        id="ResetPassword"
        class="input {% if form.errors contains 'password' %}input-error{% endif %}"
        placeholder="{{ 'customer.reset_password.password' | t }}">
      <label for="ResetPassword" class="input-label">
        {{ 'customer.reset_password.password' | t }}
      </label>
       {% render 'icons', icon: 'tick' %}
       {% render 'icons', icon: 'fail' %}
    </div>

    <div class="form-group">
      <input type="password"
        name="customer[password_confirmation]"
        id="PasswordConfirmation"
        class="input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
        placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
      <label for="PasswordConfirmation" class="input-label">
        {{ 'customer.reset_password.password_confirm' | t }}
      </label>
       {% render 'icons', icon: 'tick' %}
       {% render 'icons', icon: 'fail' %}
    </div>

    <input type="submit" class="button" value="{{ 'customer.reset_password.submit' | t }}">
  {% endform %}
</div>
